<UserControl x:Class="LibraryTRY3.RandomUsercontrol.BetterTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryTRY3.RandomUsercontrol"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <TextBox x:Name="txtInput" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light" Background="Transparent" TextChanged="txtInput_TextChanged" Padding="1" BorderThickness="2" BorderBrush="Transparent" GotFocus="txtInput_GotFocus" LostFocus="txtInput_LostFocus"/>
        <TextBlock x:Name="tbPlaceHolder" Text="{Binding Placeholder}" FontSize="16" FontWeight="Light" Foreground="DarkGray" VerticalAlignment="Center" Margin="5" Panel.ZIndex="-1" />
    </Grid>
</UserControl>
